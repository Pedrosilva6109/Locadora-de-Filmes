------------------------------------
select * from store s 
inner join staff s2 
on s2.staff_id = s.manager_staff_id
inner join rental r 
on r.staff_id = s2.staff_id 
inner join inventory i 
on r.inventory_id = i.inventory_id
group by r.inventory_id;

